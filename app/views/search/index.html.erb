<%= form_tag(controller: "search", action: "index") do %>
  <%= label_tag(:search_field, "Search for:") %>
  <%= text_field_tag(:search_field) %>
  <%= submit_tag("Search") %>
  <br/>
  <% i = 0
    while i < @count.to_i do %>
      <%= @ids[i] %><br/>
      <%= raw @metadata_info[i].join("<br>") %><br>
      <%= @schemas[i] %>
      <br/>
      <br/>
    <% i += 1
    end %>
<% end %>
