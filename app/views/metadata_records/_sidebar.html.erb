<div class="sidebar">
  <%= form_for metadata_records_path, url: root_path, method: :get do %>
    <div class='input-group input-group-sm'>
      <%= text_field_tag(:search, params[:search], class: 'form-control' ) %>
      <span class='input-group-btn'>
        <%= button_tag('Buscar', class: 'btn btn-default', type: 'submit') %>
      </span>
    </div> <!--input-group-->

    <hr />

    <% selected_provider = (params[:provider] || geonetwork_default_provider) %>
    <%= label_tag :provider, "Servidor GeoNetwork:" %>
    <%= select_tag :provider, options_for_select(geonetwork_providers.map{|key, data| [data[:title], key]}, selected_provider), onchange: 'this.form.submit();' %>
  <% end %>
</div><!--sidebar-->
